{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
<main>
	<div class="container w-50 mt-5 pt-5">

        <div class="mt-4 pt-4 text-center">
			{{ include('_partials/_flash_messages.html.twig') }}
		</div>

		<h1 class="mb-4 pt-5 text-center fw-bold">Inscription</h1>

        {{ form_errors(registrationForm) }}

		{{ form_start(registrationForm) }}
		<div class="row">
            <div class="col-6">
                {{ form_row(registrationForm.lastname) }}
            </div>
            <div class="col-6">
                {{ form_row(registrationForm.firstname) }}
            </div>
            <div class="col-6">
                {{ form_row(registrationForm.email) }}
            </div>
            <div class="col-6">
                {{ form_row(registrationForm.birthDate) }}
            </div>
            <div class="col-6">
                {{ form_row(registrationForm.phone_number) }}
            </div>
            <div class="col-6">
                {{ form_row(registrationForm.whatsApp) }}
            </div>
            <div class="col-12">
                {{ form_row(registrationForm.address) }}
            </div>
            <div class="col-12">
                {{ form_row(registrationForm.add_on_address) }}
            </div>
            <div class="col-6">
                {{ form_row(registrationForm.postal_code) }}
            </div>
            <div class="col-6">
                {{ form_row(registrationForm.city) }}
            </div>
            <div class="col-12">
                {{ form_row(registrationForm.plainPassword) }}
            </div>
            <div class="col-6">
                {{ form_row(registrationForm.nationality) }}
            </div>
            <div class="col-6">
                {{ form_row(registrationForm.job) }}
            </div>
            <div class="col-12">
                {{ form_row(registrationForm.entryDate) }}
            </div>
            <div class="col-12">
                {{ form_row(registrationForm.employed) }}
            </div>
            <p class="text-danger">(*) champs obligatoires</p>
        </div>

		{{ form_end(registrationForm) }}
	</div>
</main>

{% endblock %}
