{% extends 'admin/admin_base.html.twig' %}

{% block title %}Cours{% endblock %}

{% block body %}
<main>
    <div class="container my-5 pt-5">
        <h1 class="my-5 pt-5 fw-bold text-center">Cours</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Titre</th>
                    <td>{{ course.name }}</td>
                </tr>
                <tr>
                    <th>Fichier</th>
                    <td>{{ course.file }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ course.description }}</td>
                </tr>
                <tr>
                    <th>Créé le</th>
                    <td>{{ course.createdAt ? course.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Mise à jour le</th>
                    <td>{{ course.updatedAt ? course.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_admin_course_index') }}" class="btn btn-warning mb-1">Retour liste</a>

        <a href="{{ path('app_admin_course_edit', {'id': course.id}) }}" class="btn btn-primary mb-1">Modifier</a>

        {{ include('admin/course_crud/_delete_form.html.twig') }}
    </div>
</main>
{% endblock %}
