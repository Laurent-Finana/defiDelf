{% extends 'admin/admin_base.html.twig' %}

{% block title %}Partenaires{% endblock %}

{% block body %}
<main>
	<div class="container mt-5 mb-4 pt-5">

        <div class="mt-4 pt-4 text-center">
			{{ include ('_partials/_flash_messages.html.twig')}}
		</div>

        <h1 class="mt-4 pt-4 text-center fw-bold">Liste des partenaires</h1>

        <a href="{{ path('app_admin_partner_new') }}" class="btn btn-success">Ajouter</a>

        <table class="table table-striped table-hover align-middle">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Image</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
            {% for partner in partners %}
                <tr>
                    <td>{{ partner.name }}</td>
                    <td><img src="{{ vich_uploader_asset(partner, 'thumbnailFile') }}" width="150" alt="logo partenaire"></td>
                    <td>
                        <a href="{{ path('app_admin_partner_show', {'id': partner.id}) }}" class="btn btn-primary">Voir</a>
                        <a href="{{ path('app_admin_partner_edit', {'id': partner.id}) }}" class="btn btn-warning">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucun résultat trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_admin_partner_new') }}" class="btn btn-success">Ajouter</a>
    </div>
</main>
{% endblock %}
