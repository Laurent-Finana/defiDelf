{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}
	<form method="post" class="mt-5 pt-5 row gy-4">
		{% if error %}
			<div class="alert alert-danger mt-5">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				Vous êtes connecté en tant que
				{{ app.user.userIdentifier }},
				<a href="{{ path('app_logout') }}">Se déconnecter</a>
			</div>
		{% endif %}

		<h1 class="h3 mb-3 mt-4 pt-5 font-weight-normal text-center">Connexion</h1>
		<div class="d-flex flex-column mx-auto w-50">
			<label for="username">Email</label>
			<input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control mt-2 mb-3" autocomplete="email" required autofocus>
			<label for="password">Mot de passe</label>
			<input type="password" name="_password" id="password" class="form-control mt-2 mb-3" autocomplete="current-password" required>

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">


			<div class="checkbox">
				<label>
					<input type="checkbox" name="_remember_me">
					Se souvenir de moi
				</label>
			</div>

			<div class="d-grid gap-2 d-md-block mt-2">
				<button class="btn btn-sm btn-primary" type="submit">
					Se connecter
				</button>
			</div>

			<div class="mt-3">
				<a href="{{ path('app_register') }}" class="text-success fw-bold text-decoration-none">Pas encore inscrit ? Créer un compte</a>
			</div>

		</div>
	</form>
{% endblock %}