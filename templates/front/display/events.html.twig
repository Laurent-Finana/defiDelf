{% extends 'base.html.twig' %}

{% block title %}Evènements{% endblock %}

{% block body %}

<main>

  <section class="mt-5 py-5 text-center container">
    <div class="row mt-5 py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light">Galerie photos</h1>
        <p class="lead text-body-secondary">Retrouvez ici quelques instants captés lors de cours, remise des diplômes, sorties culturelles...</p>
      </div>
    </div>
  </section>

  <div class="album py-5 bg-body-tertiary">
    <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">          
        {% for photo in photos %}
                <div class="col">
                    <div class="card shadow-sm">
                        <img src="{{ asset('assets/photos/defidelf' ~ photo ~ '.jpg') }}" alt="photo" />
                        <div class="card-body">
                        <p class="card-text">Cours texte de présentation de la photo (facultatif).</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-body-secondary">25.01.2024</small>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
  </div>

</main>

{% endblock %}
