{% extends 'base.html.twig' %}

{% block title %}Nos actions
{% endblock %}

{% block body %}

	<main>
		<section class="mt-5 py-5">
			<div class="album pb-5">
				<div class="container">
					<h1 class="mt-5 pt-5 text-center fw-bold mb-4 mb-md-0">Nos actions</h1>
					<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 pt-5 g-3">
						{% for key, card in cards %}
							<div class="col">
								<div class="card zoom shadow rounded-4">
									<img class="img-fluid img-thumbnail rounded-top-4" src="{{ asset('assets/photos/' ~ card.photo ~ '.jpg') }}" alt="photo"/>
									<div class="card-body">
										<h6 class="card-title text-center fw-bold text-warning">{{ card.title }}</h6>
										<p class="card-text text-center">{{ card.content }}</p>
										<div class="d-flex justify-content-between align-items-center">
											<small class="text-body-secondary">25.01.2024</small>
										</div>
									</div>
								</div>
							</div>
						{% endfor %}
					</div>
				</div>
			</div>
		</section>
	</main>

{% endblock %}
