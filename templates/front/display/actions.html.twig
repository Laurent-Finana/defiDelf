{% extends 'base.html.twig' %}

{% block title %}Nos actions
{% endblock %}

{% block body %}

	<main>
		<section class="mt-5 py-5">
			<div class="album pb-5">
				<div class="container">
					<p class="mt-5 pt-5 text-center"><em>"L'étranger, qui est malhabile à parler la langue, risque toujours d'être sans défense devant le droit du pays qui l'accueille ou qui l'expulse."</em></p>
					<p class="text-end text-decoration-underline">Jacques Derrida (philosophe français)</p>
					<h1 class="pt-5 text-center fw-bold mb-4 mb-md-0">Nos actions</h1>
					<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 pt-5 g-3">
						{% for article in articles | reverse %}
							<div class="col">
								<div class="card zoom shadow rounded-4 h-100">
									<img class="img-fluid img-thumbnail rounded-top-4" src="{{ vich_uploader_asset(article, 'thumbnailFile') }}" alt="photo"/>
									<div class="card-body">
										<h6 class="card-title text-center fw-bold text-warning">{{ article.title }}</h6>
										<p class="card-text text-center">{{ article.content }}</p>
									</div>
									<footer class="bg-white m-3">
										<div class="d-flex justify-content-between align-items-center">
											<small class="text-body-secondary">{{ article.createdAt | date('d-m-Y') }}</small>
										</div>
									</footer>
								</div>
							</div>
						{% endfor %}
					</div>
				</div>
			</div>
		</section>
	</main>

{% endblock %}
